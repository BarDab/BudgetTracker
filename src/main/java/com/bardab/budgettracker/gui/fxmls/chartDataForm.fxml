<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.bardab.budgettracker.gui.controllers.ChartDataFormFXController"
      fx:id="chartDataForm"
      style=" fx-background-color: #336699;"
      spacing="10"

>
    <padding>
        <Insets left="10" top="14"></Insets>
    </padding>
    <VBox spacing="4">

        <Label text="Choose data for charts" textFill="white"></Label>


        <HBox minHeight="1" style="-fx-background-color: #6B8E23"></HBox>
    </VBox>


    <VBox>
        <padding>
            <Insets top="10"></Insets>
        </padding>
        <VBox spacing="5">
            <HBox spacing="10">
                <DatePicker fx:id="datePickerFrom" promptText="From" maxWidth="100"></DatePicker>
                <DatePicker fx:id="datePickerTo" promptText="To" maxWidth="100"></DatePicker>
            </HBox>
        </VBox>
        <HBox alignment="CENTER">

            <Button  onAction="#addCategory" alignment="TOP_CENTER" text="&gt;&gt;" textFill="#DAA520"
                    style="-fx-background-color: #434343"/>
            <Button  onAction="#removeCategory" alignment="TOP_CENTER" text="&lt;&lt;" textFill="#DAA520"
                    style="-fx-background-color: #434343"/>
        </HBox>
        <HBox spacing="5">
            <ListView fx:id="availableCategories"  maxHeight="120" maxWidth="100"></ListView>
            <ListView fx:id="categoriesToBeAdded" maxHeight="120" maxWidth="100"></ListView>
        </HBox>
        <HBox spacing="5" alignment="TOP_RIGHT">
            <Button  onAction="#updateLineChart"  text="&gt;&gt;" textFill="#DAA520"
                    style="-fx-background-color: #434343"/>
            <Button onAction="#updatePieChart" text="&lt;&lt;" textFill="#DAA520"
                    style="-fx-background-color: #434343"/>
        </HBox>

    </VBox>

    <HBox minHeight="1" style="-fx-background-color: #6B8E23"></HBox>

</VBox>
