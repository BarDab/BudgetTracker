<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.bardab.budgettracker.gui.controllers.ChartDataFormFXController"
      fx:id="chartDataForm"
      style=" fx-background-color: #2B2B2B;"
      alignment="CENTER"


>
    <padding>
        <Insets top="1"></Insets>
    </padding>


    <HBox style="-fx-background-color: #3C3F41; -fx-border-color:#323232; -fx-border-width: 1; ">
        <VBox alignment="CENTER">
            <Label text="Choose data for charts" textFill="DAA520" minHeight="20">
                <padding><Insets left="10"></Insets> </padding>
            </Label>
        </VBox>
    </HBox>
    <VBox>

        <HBox spacing="5" alignment="BOTTOM_CENTER">
            <VBox>
                <HBox alignment="CENTER_LEFT">
                    <Button fx:id="switchList" onAction="#switchList" text="&gt;&gt; " />
                    <Label fx:id="chosenListName" textFill="white" HBox.hgrow="ALWAYS"></Label>
                </HBox>
                <ListView fx:id="availableCategories" maxHeight="120" maxWidth="140"></ListView>
            </VBox>
            <VBox spacing="5" alignment="BOTTOM_CENTER">
                <Button onAction="#moveAllCategoriesFromAvailable" text="All &gt;&gt;" alignment="CENTER_LEFT"></Button>
                <Button onAction="#moveAllCategoriesFromToBeAdded" text="&lt;&lt; All"
                        alignment="CENTER_RIGHT"></Button>
            </VBox>
            <ListView fx:id="categoriesToBeAdded" maxHeight="120" maxWidth="140"></ListView>
            <VBox spacing="5" alignment="BOTTOM_CENTER">
                <DatePicker fx:id="datePickerFrom" promptText="From" maxWidth="100"></DatePicker>
                <DatePicker fx:id="datePickerTo" promptText="To" maxWidth="100"></DatePicker>
                <Button onAction="#updateBarChart" text="Update Bar Chart"/>
                <Button onAction="#updatePieChart" text="Update Pie Chart"/>
            </VBox>
        </HBox>
    </VBox>


</VBox>
