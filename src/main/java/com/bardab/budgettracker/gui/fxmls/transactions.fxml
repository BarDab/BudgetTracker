<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.geometry.Insets?>

<?import javafx.scene.shape.Line?>
<VBox
        xmlns="http://javafx.com/javafx"
        xmlns:fx="http://javafx.com/fxml"
        fx:controller="com.bardab.budgettracker.gui.controllers.TransactionsFXController"
        fx:id="transactions"
        stylesheets="@budgetLook.css"
        spacing="2">


    <HBox style="-fx-background-color: #3C3F41 " minHeight="20">
        <VBox alignment="CENTER">
            <Label text="Transactions" textFill="DAA520">
                <padding><Insets left="10"></Insets> </padding>
            </Label>
        </VBox>
    </HBox>

    <HBox style="-fx-background-color: #2B2B2B" minWidth="215" spacing="10" alignment="CENTER">
        <padding><Insets left="10"></Insets> </padding>

        <DatePicker fx:id="transactionsDateFrom" maxHeight="20" promptText="From" maxWidth="100"></DatePicker>
        <DatePicker fx:id="transactionsDateTo" promptText="To" maxWidth="100"></DatePicker>



    <MenuBar fx:id="transactionsMenuBar" minHeight="30" minWidth="215" style="-fx-background-color: #2B2B2B" >

        <menus>
            <Menu fx:id="variableCategoriesMenu">
                <graphic>
                    <VBox minHeight="27" alignment="CENTER">
                        <Button text="Variables"
                                alignment="CENTER"></Button>

                    </VBox>
                </graphic>
                <CustomMenuItem fx:id="customMenuItemVariables" style="-fx-background-color: #3C3F41">

                </CustomMenuItem>
            </Menu>
            <Menu fx:id="fixedCategoriesMenu">
                <graphic>
                    <VBox minHeight="27" alignment="CENTER">
                        <Button text="Fixed"
                                alignment="CENTER"></Button>
                    </VBox>
                </graphic>
                <CustomMenuItem fx:id="customMenuItemFixed"></CustomMenuItem>
            </Menu>
            <Menu fx:id="searchTransactionsMenu">
                <graphic>
                    <VBox minHeight="27" alignment="CENTER">
                        <Button onAction="#listFilteredTransactions" text="Search"
                                alignment="CENTER"></Button>
                    </VBox>
                </graphic>
            </Menu>
        </menus>
    </MenuBar>
    </HBox>

    <HBox minHeight="1" style="-fx-background-color: #3C3F41"></HBox>
    <!--    </VBox>-->

    <TableView
            fx:id="transactionTable" onMouseClicked="#deleteTransaction"
            onKeyPressed="#deleteTransaction" maxHeight="270" maxWidth="450">
        <padding><Insets left="10" bottom="5" ></Insets> </padding>


        <columns>
            <TableColumn fx:id="dateColumn" text="Date" resizable="false" minWidth="100">
                <cellValueFactory>
                    <PropertyValueFactory property="transactionDate"/>
                </cellValueFactory>
            </TableColumn>


            <TableColumn fx:id="valueColumn" text="Value" maxWidth="60" resizable="false">
                <cellValueFactory>
                    <PropertyValueFactory property="value"/>
                </cellValueFactory>
            </TableColumn>

            <TableColumn fx:id="categoryColumn" text="Category" minWidth="125" resizable="false">
                <cellValueFactory>
                    <PropertyValueFactory property="category"/>
                </cellValueFactory>
            </TableColumn>

            <TableColumn fx:id="descriptionColumn" text="Description" minWidth="150" resizable="false">
                <cellValueFactory>
                    <PropertyValueFactory property="description"/>
                </cellValueFactory>
            </TableColumn>
        </columns>


    </TableView>
</VBox>
