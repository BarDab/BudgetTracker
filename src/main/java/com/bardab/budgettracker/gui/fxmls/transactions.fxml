<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.geometry.Insets?>

<VBox
        xmlns="http://javafx.com/javafx"
        xmlns:fx="http://javafx.com/fxml"
        fx:controller="com.bardab.budgettracker.gui.controllers.TransactionsFXController"
        fx:id="transactions"
        stylesheets="@budgetLook.css"
        spacing="2">



    <HBox fx:id="transactionsSection" minHeight="20">
        <VBox alignment="CENTER">
            <Label text="Transactions" >
                <padding>
                    <Insets left="10"></Insets>
                </padding>
            </Label>
        </VBox>
    </HBox>
    <VBox>

        <HBox  minWidth="215" spacing="15" alignment="CENTER_LEFT">
            <padding>
                <Insets left="15"></Insets>
            </padding>
            <HBox>
            <DatePicker fx:id="transactionsDateFrom" maxHeight="20" promptText="From" maxWidth="100"></DatePicker>
            <DatePicker fx:id="transactionsDateTo" promptText="To" maxWidth="100"></DatePicker>
            </HBox>
            <HBox spacing="5">
                <Button onAction="#updatePieChartWithCurrentTransactions" text="Update Pie Chart"></Button>
                <Button onAction="#updateBarChartWithCurrentTransactions" text="Update Bar Chart"></Button>
            </HBox>
        </HBox>
        <HBox alignment="CENTER_LEFT" >
            <MenuBar fx:id="transactionsMenuBar" minHeight="30" >

                <menus>
                    <Menu fx:id="variableCategoriesMenu">
                        <graphic>
                            <VBox minHeight="27" >
                                <Button text="Variables"></Button>

                            </VBox>
                        </graphic>
                        <CustomMenuItem fx:id="customMenuItemVariables" >
                        </CustomMenuItem>
                    </Menu>
                    <Menu fx:id="fixedCategoriesMenu">
                        <graphic>
                            <VBox minHeight="27" >
                                <Button text="Fixed"></Button>
                            </VBox>
                        </graphic>
                        <CustomMenuItem fx:id="customMenuItemFixed"></CustomMenuItem>
                    </Menu>
                </menus>
            </MenuBar>
            <Button onAction="#updateTransactionsInTable" text="Search"></Button>
        </HBox>

    </VBox>


    <TableView
            fx:id="transactionTable" onMouseClicked="#deleteTransaction"
            onKeyPressed="#deleteTransaction" maxHeight="270" maxWidth="450">
        <padding>
            <Insets left="10" bottom="5"></Insets>
        </padding>


        <columns>
            <TableColumn fx:id="dateColumn" text="Date" resizable="false" minWidth="100">
                <cellValueFactory>
                    <PropertyValueFactory property="transactionDate"/>
                </cellValueFactory>
            </TableColumn>


            <TableColumn fx:id="valueColumn" text="Value" maxWidth="60" resizable="false">
                <cellValueFactory>
                    <PropertyValueFactory property="value"/>
                </cellValueFactory>
            </TableColumn>

            <TableColumn fx:id="categoryColumn" text="Category" minWidth="125" resizable="false">
                <cellValueFactory>
                    <PropertyValueFactory property="category"/>
                </cellValueFactory>
            </TableColumn>

            <TableColumn fx:id="descriptionColumn" text="Description" minWidth="150" resizable="false">
                <cellValueFactory>
                    <PropertyValueFactory property="description"/>
                </cellValueFactory>
            </TableColumn>
        </columns>


    </TableView>
</VBox>
