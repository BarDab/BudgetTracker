<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.geometry.Insets?>

<?import javafx.scene.shape.Line?>
<VBox
        xmlns="http://javafx.com/javafx"
        xmlns:fx="http://javafx.com/fxml"
        fx:controller="com.bardab.budgettracker.gui.controllers.TransactionsFXController"
        fx:id="transactions"
        maxHeight="300" stylesheets="@budgetLook.css">

    <VBox spacing="0" minHeight="40">
        <HBox style="-fx-background-color: #434343" spacing="30">
            <VBox alignment="CENTER">
                <Label text="Transactions" textFill="#6B8E23"></Label>
            </VBox>
            <HBox>
                <HBox>
                    <Button text="&lt;&lt;" onAction="#previousMonthTransactions" textFill="#6B8E23"
                            style="-fx-background-color: #434343"/>

                    <VBox alignment="CENTER">
                        <Label text="Date" fx:id="transactionTableLabel" textFill="white"></Label>
                    </VBox>
                    <Button text="&gt;&gt;" onAction="#nextMonthTransactions" textFill="#6B8E23"
                            style="-fx-background-color: #434343"/>
                </HBox>
            </HBox>
        </HBox>
        <HBox minHeight="1" style="-fx-background-color: #6B8E23"></HBox>
    </VBox>

    <TableView
            fx:id="transactionTable" onMouseClicked="#deleteTransaction"
            onKeyPressed="#deleteTransaction" maxHeight="270">


        <columns>
            <TableColumn fx:id="dateColumn" text="Date">
                <cellValueFactory>
                    <PropertyValueFactory property="transactionDate"/>
                </cellValueFactory>
            </TableColumn>


            <TableColumn fx:id="valueColumn" text="Value" maxWidth="60">
                <cellValueFactory>
                    <PropertyValueFactory property="value"/>
                </cellValueFactory>
            </TableColumn>

            <TableColumn fx:id="categoryColumn" text="Category" minWidth="100">
                <cellValueFactory>
                    <PropertyValueFactory property="category"/>
                </cellValueFactory>
            </TableColumn>

            <TableColumn fx:id="descriptionColumn" text="Description" minWidth="150">
                <cellValueFactory>
                    <PropertyValueFactory property="description"/>
                </cellValueFactory>
            </TableColumn>
        </columns>

        <BorderPane.margin>
            <Insets right="10.0"/>
        </BorderPane.margin>
    </TableView>
</VBox>
