<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>

<?import org.kordamp.ikonli.javafx.FontIcon?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.shape.Line?>
<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0"
            prefWidth="800.0"
            xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.bardab.budgettracker.gui.controllers.MainWindowFXController"
            stylesheets="@budgetLook.css"

>


    <left>
        <HBox minWidth="800" minHeight="600" spacing="10" style="-fx-background-color: #434343;">

           <VBox > <HBox >
            <TabPane fx:id="addingPane" side="LEFT" tabMinHeight="50" minHeight="300">
                <padding><Insets right="20"></Insets></padding>
                <tabs>
                    <Tab  fx:id="expensesTab" closable="false">
                        <graphic>
                            <HBox  style="-fx-background-color: #434343;"  >
<!--                                <Label text="Expense/Income" textFill="white"></Label>-->
                                <FontIcon iconLiteral="fa-money" iconSize="23" iconColor="white"></FontIcon>
                            </HBox>
                        </graphic>
                        <HBox spacing="20">
                            <VBox minWidth="1" style="-fx-background-color: #DAA520"></VBox>
                            <fx:include fx:id="newTransaction" source="newTransaction.fxml"></fx:include>
                        </HBox>
                    </Tab>
                    <Tab fx:id="incomeTab" closable="false" >
                        <graphic>
                            <HBox  style="-fx-background-color: #434343;" >
<!--                                <Label text="Budget" textFill="white"></Label>-->
                                <FontIcon iconLiteral="fa-pencil-square-o" iconSize="23" iconColor="white"></FontIcon>
                            </HBox>
                        </graphic>
                        <HBox  spacing="20">
                            <VBox minWidth="1" style="-fx-background-color: #DAA520"></VBox>
                            <fx:include fx:id="budget" source="budget.fxml"/>
                        </HBox>
                    </Tab>

                    <Tab  closable="false">
                        <graphic>
                            <HBox  style="-fx-background-color: #434343;" >
<!--                                <Label text="Stocks" textFill="white"></Label>-->
                                <FontIcon iconLiteral="fa-line-chart" iconSize="23" iconColor="white"></FontIcon>
                            </HBox>
                        </graphic>
                        <HBox spacing="20">
                        <VBox maxWidth="1" style="-fx-background-color: #DAA520"></VBox>
                            <fx:include source="chartDataForm.fxml" fx:id="chartDataForm"/>
                        </HBox>
                    </Tab>
                </tabs>
            </TabPane>
               <VBox minWidth="1" style="-fx-background-color: #DAA520"></VBox>
               <fx:include fx:id="chart" source="chartArea.fxml" ></fx:include>
           </HBox>
               <HBox>
                   <fx:include fx:id="balance" source="balance.fxml" maxHeight="200" maxWidth="400"/>
                   <fx:include fx:id="transactions" source="transactions.fxml"></fx:include>
               </HBox>
           </VBox>


            <HBox maxWidth="420" spacing="30">


            </HBox>


        </HBox>

    </left>


    <top>
        <VBox>
            <HBox style="-fx-background-color:#606365">
                <MenuBar prefWidth="1600" minHeight="50" style="-fx-background-color:#606365">
                    <menus>
                        <Menu>
                            <graphic>
                                <Label text="File" textFill="white"></Label>
                            </graphic>
                            <MenuItem text="File">

                            </MenuItem>
                            <MenuItem text="Import">

                            </MenuItem>
                            <MenuItem text="Exit">
                            </MenuItem>
                        </Menu>
                        <Menu>
                            <graphic>
                                <Label text="View" textFill="white"></Label>
                            </graphic>
                            <MenuItem text="Daily"></MenuItem>
                            <MenuItem text="Monthly"></MenuItem>
                            <MenuItem text="Specify time period"></MenuItem>
                        </Menu>
                        <Menu>
                            <graphic>
                                <Label text="Options" textFill="white"></Label>
                            </graphic>
                            <MenuItem text="Delete"></MenuItem>
                            <MenuItem text="Edit"></MenuItem>
                            <MenuItem text="Manage types"></MenuItem>
                        </Menu>
                        <Menu>
                            <graphic>
                                <Label text="Help" textFill="white"></Label>
                            </graphic>
                            <MenuItem text="About"></MenuItem>
                        </Menu>

                    </menus>
                </MenuBar>

                <Button style="-fx-background-color:#606365">
                    <graphic>
                        <FontIcon iconLiteral="fa-window-minimize" iconColor="white" iconSize="10"></FontIcon>
                    </graphic>
                </Button>
                <Button style="-fx-background-color:#606365">
                    <graphic>
                        <FontIcon iconLiteral="fa-window-maximize" iconColor="white" iconSize="10"></FontIcon>
                    </graphic>
                </Button>
                <Button style="-fx-background-color:#606365">
                    <graphic>
                        <FontIcon iconLiteral="fa-close" iconColor="white" iconSize="10"></FontIcon>
                    </graphic>
                </Button>
            </HBox>
            <Line fill="lightgray" visible="true"></Line>
        </VBox>
    </top>
</BorderPane>
