<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:id="budgetForecast"
      fx:controller="com.bardab.budgettracker.gui.controllers.BudgetForecastFXController"
      prefWidth="Infinity" prefHeight="Infinity">
    <HBox spacing="10" >
            <padding><Insets top="25" right="5" bottom="5" left="25"/></padding>
            <ComboBox fx:id="yearComboBox" promptText="Year" visible="true" prefWidth="80"><maxWidth></maxWidth></ComboBox>
            <ComboBox fx:id="monthComboBox" promptText="Month" visible="true" prefWidth="80"><maxWidth></maxWidth></ComboBox>
            <Label text="Income" prefWidth="40" ></Label>
            <TextField fx:id="incomeTextField" prefWidth="40" ></TextField>
            <Label text="Savings" prefWidth="60" ></Label>
            <TextField fx:id="savingGoalTextField" promptText="0.0" prefWidth="40" ></TextField>


    </HBox>
    <HBox spacing="10">
            <padding><Insets top="5" right="5" bottom="5" left="25"/></padding>
            <Label text="Fixed Spending" prefWidth="100" ></Label>
            <ComboBox fx:id="fixedSpendingComboBox" promptText="Category"  visible="true">
                <maxWidth></maxWidth>
            </ComboBox>
            <TextField fx:id="fixedSpendingTextField" promptText="0.0" prefWidth="50"></TextField>
            <Button fx:id="fixedSpendingButton" text="Change" onAction="#updateFixedCost"></Button>
    </HBox>
    <HBox spacing="10">
            <padding><Insets top="5" right="5" bottom="5" left="25"/></padding>
            <Label text="Additional spending" prefWidth="120" ></Label>
            <TextField fx:id="additionalSpendingTextField" text="0.0" prefWidth="50"></TextField>
            <Button fx:id="approveButton" text="Approve" onAction="#approveBudget" style="-fx-font-weight: bold"></Button>
    </HBox>
    <HBox spacing="10">
        <padding><Insets top="5" right="5" bottom="5" left="25"/></padding>
        <Label fx:id="dateWarningLabel" text="Date is not specified" prefWidth="200" visible="false" style="-fx-text-fill: #ff0000" />
    </HBox>

</VBox>


